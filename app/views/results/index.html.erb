<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">


      <%= form_tag results_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Search for artists and labels"
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>

      <% if @artists %>
        <h2>Artists</h2>
        <ul>
          <% @artists.each do |artist| %>
            <li>
              <%= artist.name %>
            </li>
          <% end %>
        </ul>
      <% end %>
      <% if @labels %>
        <h2>Labels</h2>
        <ul>
          <% @labels.each do |label| %>
            <li>
              <%= label.name %>
            </li>
          <% end %>
        </ul>
      <% end %>

    </div>
  </div>
</div>

<%= simple_form_for(:filter, method: :get, url: results_path) do |f| %>
  <%= f.input :genres, as: :check_boxes, collection: Artist::GENRES, include_hidden: false, input_html: { multiple: true } %>
  <%= f.input :roles, as: :check_boxes, collection: Artist::ROLES, include_hidden: false, input_html: { multiple: true } %>
  <%= f.input :location, placeholder: 'Type the location' %>
  <%= f.submit 'Submit' %>
<% end %>

