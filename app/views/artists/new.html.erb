<h1>Create your profile</h1>
<%= simple_form_for @artist do |f| %>
  <%= f.input :name %>
  <%= f.input :age %>
  <%= f.input :location %>
  <%= f.input :bio %>
  <%= f.input :influences %>
  <%= f.input :genres, collection: Artist::GENRES, include_hidden: false, input_html: { multiple: true } %>
  <%= f.input :soundcloud_url %>
  <%= f.input :website_url %>
  <%= f.input :youtube_url %>
  <%= f.input :instagram_url %>
  <%= f.submit "Create", class: 'btb btn-gradient p-2' %>
<% end %>
